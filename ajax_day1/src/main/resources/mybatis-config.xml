<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd" >
<configuration>



	<!-- 引入properties -->
	<properties resource="jdbc.properties"/>
	<!-- 别名配置
		1.指定类 起别名<typeAlias type="com.baizhi.entity.User" alias="user"/>
		2.指定包 起别名 <package name="com.baizhi.entity"/> 包下所有类自动起别名  默认起的别名  User  user
	 -->
	<typeAliases>
		<typeAlias type="com.baizhi.entity.City" alias="city"/>
		<typeAlias type="com.baizhi.entity.Area" alias="area"/>
		<typeAlias type="com.baizhi.entity.Province" alias="Province"/>
	</typeAliases>
	
	<!-- 连接相关参数 -->
	<environments default="dev">
		<environment id="dev">
			<transactionManager type="JDBC"/>
			<dataSource type="POOLED">
				<property name="driver" value="${driver}"/>
				<property name="url" value="${url}"/>
				<property name="username" value="${username}"/>
				<property name="password" value="${password}"/>
			</dataSource>
		</environment>
	</environments>
	
	
	<!-- mapper文件的注册 -->
	<mappers>
		<mapper resource="com/baizhi/mapper/AreaMapper.xml"/>
		<mapper resource="com/baizhi/mapper/CityMapper.xml"/>
		<mapper resource="com/baizhi/mapper/ProvinceMapper.xml"/>

	</mappers>


</configuration>
